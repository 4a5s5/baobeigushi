{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/api/*"],
  "routes": [
    {
      "src": "/api/tts",
      "dest": "/functions/api/tts.js"
    },
    {
      "src": "/api/voices",
      "dest": "/functions/api/voices.js"
    },
    {
      "src": "/api/check-password",
      "dest": "/functions/api/check-password.js"
    },
    {
      "src": "/api/verify-password",
      "dest": "/functions/api/verify-password.js"
    },
    {
      "src": "/*",
      "dest": "/index.html"
    }
  ]
}